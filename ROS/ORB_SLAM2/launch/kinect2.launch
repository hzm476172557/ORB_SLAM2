<launch>
    <param name="use_sim_time" value="false" />

    <!-- 
        <include file="$(find kinect2_bridge)/launch/kinect2_bridge.launch" >
            <param name="publish_tf" type="bool" value="true" />
        </include>
     -->

    <arg name="PATH_TO_VOCABULARY" value="$(find ORB_SLAM2)/../../Vocabulary/ORBvoc.txt" />
    <arg name="PATH_TO_SETTINGS_FILE" value="$(find ORB_SLAM2)/../../param/kinect2.yaml" />

    <node name="ORB_SLAM2" pkg="ORB_SLAM2" type="RGBD" args="$(arg PATH_TO_VOCABULARY) $(arg PATH_TO_SETTINGS_FILE)" output="screen">
        <remap from="/camera/rgb/image_raw" to="/kinect2/qhd/image_color_rect" />
        <remap from="/camera/depth_registered/image_raw" to="/kinect2/qhd/image_depth_rect" />
    </node>
</launch>
